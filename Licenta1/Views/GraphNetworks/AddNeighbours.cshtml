@model GraphNetworkAddNeighbourVM
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add Neighbours for @Model.Station1.Name and id: @Model.Station1_Id</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group">
                <label asp-for="Distance" class="control-label"></label>
                <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Station2_Id" class="control-label"></label>
                <select asp-for="Station2_Id" asp-items="Model?.Station2" class="form-select">
                    <option>Select Station</option>
                </select>
                <span asp-validation-for="Station2_Id" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Add more neighbours" class="btn btn-warning" asp-controller="GraphNetworks" asp-action="Create1" name="@Model" asp-route-Station1_Id="@Model?.Station1_Id" />
                <a asp-action="Index" class="btn btn-dark">Submit</a>
            </div>
        </form>
    </div>
</div>
<br />
<div>
</div>

