@model IEnumerable<NodeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">Create New</a>
  
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Station.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Neighbours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Station.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighbours)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.NodeId" type="button" class="btn btn-warning">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NodeId" type="button" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Generate" type="button" class="btn btn-warning">Generate automactly</a>
